{
  "name": "webfolio",
  "version": "1.1.0",
  "scripts": {
    "ng": "npx ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "build": "npm run prebuild && ng build",
    "build:development": "npm run prebuild && ng build --configuration development",
    "build:production": "npm run prebuild && ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "prettier": "npx prettier",
    "prettier:check": "npm run prettier -- . --check",
    "prettier:fix": "npm run prettier -- . --write",
    "stylelint": "npx stylelint",
    "stylelint:lint": "npm run stylelint -- \"**/*.(css|scss)\"",
    "stylelint:fix": "npm run stylelint -- \"**/*.(css|scss)\" --fix",
    "eslint": "npx eslint",
    "lint": "npm run eslint -- .",
    "fmt": "npm run prettier:fix && npm run stylelint:fix && npm run eslint -- . --fix",
    "prebuild": "node prebuild.js",
    "emulate:functions": "cd functions && npm run serve"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.2",
    "@angular/common": "^20.3.2",
    "@angular/compiler": "^20.3.2",
    "@angular/core": "^20.3.2",
    "@angular/forms": "^20.3.2",
    "@angular/platform-browser": "^20.3.2",
    "@angular/platform-browser-dynamic": "^20.3.2",
    "@angular/router": "^20.3.2",
    "@ngrx/component": "^20.0.1",
    "@ngrx/component-store": "^20.0.1",
    "dayjs": "^1.11.13",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.2",
    "@ebarooni/eslint-config": "^1.3.0",
    "@ebarooni/prettier-config": "^1.4.0",
    "@ebarooni/stylelint-config": "^1.4.0",
    "@eslint/js": "^9.22.0",
    "@eslint/json": "^0.10.0",
    "@eslint/markdown": "^6.3.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/jest": "^29.5.14",
    "angular-eslint": "^19.2.1",
    "daisyui": "^5.0.43",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "stylelint": "^16.16.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.26.1"
  },
  "prettier": "@ebarooni/prettier-config"
}
