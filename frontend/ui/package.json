{
  "name": "webfolio",
  "version": "1.1.0",
  "scripts": {
    "ng": "npx ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "build": "npm run prebuild && ng build",
    "build:development": "npm run prebuild && ng build --configuration development",
    "build:production": "npm run prebuild && ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "prettier": "npx prettier",
    "prettier:check": "npm run prettier -- . --check",
    "prettier:fix": "npm run prettier -- . --write",
    "stylelint": "npx stylelint",
    "stylelint:lint": "npm run stylelint -- \"**/*.(css|scss)\"",
    "stylelint:fix": "npm run stylelint -- \"**/*.(css|scss)\" --fix",
    "eslint": "npx eslint",
    "lint": "npm run eslint -- .",
    "fmt": "npm run prettier:fix && npm run stylelint:fix && npm run eslint -- . --fix",
    "prebuild": "node prebuild.js"
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.1.2",
    "@angular/compiler": "^21.1.2",
    "@angular/core": "^21.1.2",
    "@angular/forms": "^21.1.2",
    "@angular/platform-browser": "^21.1.2",
    "@angular/router": "^21.1.2",
    "@ngrx/component": "^21.0.1",
    "@ngrx/component-store": "^21.0.1",
    "dayjs": "^1.11.19",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.2",
    "@ebarooni/prettier-config": "^1.4.0",
    "@ebarooni/stylelint-config": "^1.4.0",
    "@tailwindcss/postcss": "^4.1.11",
    "daisyui": "^5.0.43",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "stylelint": "^16.16.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  },
  "prettier": "@ebarooni/prettier-config"
}
